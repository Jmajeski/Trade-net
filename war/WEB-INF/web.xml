<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.Trade_net.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.Trade_net.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ChatServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.Trade_net.servlet.ChatServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RegisterServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.Trade_net.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ListingsServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.Trade_net.servlet.ListingsServlet</servlet-class>
  </servlet>
 

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ChatServlet</servlet-name>
  	<url-pattern>/chat</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RegisterServlet</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ListingsServlet</servlet-name>
  	<url-pattern>/listings</url-pattern>
  </servlet-mapping>
 

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  
</web-app>


